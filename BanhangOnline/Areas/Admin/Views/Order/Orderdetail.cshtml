@model Banhangonline.Models.EF.Order

@{
    ViewBag.Title = "Chi tiết Đơn Hàng  ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Order" class="nav-link">Chi tiết Đơn Hàng</a>
        </li>
    </ul>}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chi tiết Đơn Hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Chi tiết Đơn Hàng</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chi tiết Đơn Hàng</h3>

            <div class="card-tools">

            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Mã Đơn Hàng</label>
                        <p class="form-control">@Model.Code</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tên Khách Hàng</label>
                        <p class="form-control">@Model.CustomerName</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tổng Tiền</label>
                        <p class="form-control">@Model.TotalAmount</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Số Điện Thoại</label>
                        <p class="form-control">@Model.Phone</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Ngày Tạo</label>
                        <p class="form-control">@Model.ModifiedrDate.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <p class="form-control">@Model.Email</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Trạng Thái</label>
                        <p class="form-control">@(Model.TypePayment==1?"Đợi Thanh Toán":"Đã Thanh Toán")</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">

                    </div>
                </div>
            </div>
            <div class="row">
                 <div class="col-md-12">
                     <h2>Danh sách sản phẩm</h2>
                  </div>
                <div class="col-md-12">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên Sản Phẩm </th>
                               
                                <th>Giá  </th>
                                <th>Số Lượng </th>
                                <th>Thành Tiền  </th>
                               
                            </tr>
                        </thead>
                        <tbody>

                            @{
                                var i = 1;
                                var thanhtien = 0;
                                foreach (var item in Model.OrderDetail)
                                {
                                    thanhtien =(int) item.Pice * item.Quantity;
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.Product.Title</td>
                                        
                                        <td>@item.Pice</td>
                                        <td>@item.Quantity</td>
                                        <td>@thanhtien.000</td>
                                    </tr>
                                    i++;
                                }
                            }

                        </tbody>
                    </table>
                </div>
                
            </div>
          

        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '#selectAll', function () {

                var checkStatus = this.checked;

                var checkbox1 = $(this).parents('.card-body').find('tr td input:checkbox');

                checkbox1.each(function () {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkbox1.attr('selected', 'checked');
                    } else {
                        checkbox1.attr('selected', '');
                    }
                })

            });
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                alert(id);
                var conf = confirm('ban co muon xoa di dong nay')
                if (conf == true) {
                    $.ajax({
                        url: '/admin/posts/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    })
                }
            });
            $('body').on('click', '#btnDeleteAll', function (e) {
                e.preventDefault();


                var a = [];

                var checkbox1 = $(this).parents('.card').find('tr td input:checkbox');

                checkbox1.each(function () {


                    if (this.checked) {


                        var _id = $(this).val();

                        a.push($(this).val())
                    } else {
                        checkbox1.attr('selected', '');
                    }

                });


                for (let dem = 0; dem < a.length; dem++ )
                {


                        $.ajax({
                            url: '/admin/posts/delete',
                            type: 'POST',
                            data: { id: a[dem] },
                            success: function (rs) {
                                if (rs.success) {
                                    $('#trow_' + a[dem]).remove();
                                }
                            }
                        });


                 }


            });
            $('body').on('click', '.btnActive', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = $(this).data("id");

                    {
                    $.ajax({
                        url: '/admin/posts/IsActive',
                        type: 'post',
                        data: { id: id },
                        success: function (rs)
                        {

                            if (rs.success) {
                                if (rs.isAcive == true) {
                                    btn.html("<i class='fa fa-check text-success'></i> ")
                                } else {
                                    btn.html("<i class='fas fa-times text-danger'></i> ")
                                }
                            }
                        }


                    })
                }
            });

        });
    </script>


}