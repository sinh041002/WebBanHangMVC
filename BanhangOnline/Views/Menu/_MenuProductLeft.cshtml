
@model IEnumerable<BanhangOnline.Models.EF.ProductCategory>
@if (Model != null && Model.Any())
{
    <ul class="sidebar_categories">
        @foreach (var item in Model)
        {
            if (ViewBag.CateId == item.Id)
            {
                <li class="active"><a href="/san-pham/@item.Alias-@item.Id"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@item.Title</a></li>
            }
            else { <li><a href="/san-pham/@item.Alias-@item.Id">@item.Title</a></li>
            }
        }

        @*<ul class="">
            <li><a href="#">Men</a></li>

            <li><a href="#">Accessories</a></li>
